    private string GetThemeTitle()
    {
        return Mode switch
        {
            DesignThemeModes.Dark => "Switch to light theme",
            DesignThemeModes.Light => "Switch to dark theme",
            DesignThemeModes.System => "Switch from system theme",
            _ => "Toggle theme"
        };
    }
}