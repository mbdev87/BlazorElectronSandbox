@page "/counter"
@using LogAnalytics.Client.Services
@using LogAnalytics.Shared
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@inject IEnvironmentInfoService EnvironmentInfoService

@rendermode @(Global.DefaultRenderMode)

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@if (EnvironmentInfoService.GetMode() == "WASM")
{
    <p>✅ Running in WebAssembly (client-side)</p>
}
else
{
    <p>🖥️ Running on Server (prerender / server-side interactivity)</p>
}


<p role="status">Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge></p>

<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private bool isWasm;

    protected override void OnInitialized()
    {
        // Quick way: detect if we're using WebAssembly JSRuntime
        isWasm = JSRuntime.GetType().FullName?.Contains("WebAssemblyJSRuntime") == true;
    }
}
