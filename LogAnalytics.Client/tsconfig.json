{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./wwwroot/js",
    "rootDir": "./TypeScript",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "TypeScript/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "bin",
    "obj"
  ]
}