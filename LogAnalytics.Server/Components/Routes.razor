<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(LogAnalytics.Client._Imports).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(LogAnalytics.Client.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="typeof(LogAnalytics.Client.Layout.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}

<style>
    .render-mode-indicator {
        position: fixed;
        top: 10px;
        right: 10px;
        background: var(--neutral-layer-floating);
        border: 1px solid var(--neutral-stroke-rest);
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 12px;
        z-index: 1000;
        color: var(--neutral-foreground-rest);
    }
</style>
